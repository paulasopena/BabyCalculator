<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/Edit_Title_Update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:inputType="text"
        android:text="@string/result"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:backgroundTint="@color/pastelRed"
        android:onClick="Clear"
        android:text="AC"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Title_Update" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Four"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:backgroundTint="@color/pastelYellow"
        app:layout_constraintStart_toStartOf="@+id/buttonSeven"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeven" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:lineSpacingExtra="48sp"
        android:onClick="Minus"
        android:text="-"
        android:textSize="48sp"
        android:backgroundTint="@color/pastelOrange"
        app:layout_constraintStart_toEndOf="@+id/buttonNine"
        app:layout_constraintTop_toTopOf="@+id/buttonNine" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Nine"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:backgroundTint="@color/pastelRed"
        app:layout_constraintStart_toEndOf="@+id/buttonEight"
        app:layout_constraintTop_toTopOf="@+id/buttonEight" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Five"
        android:text="5"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelGreen"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonFour"
        app:layout_constraintTop_toBottomOf="@+id/buttonEight" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Six"
        android:text="6"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelBlue"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonFive"
        app:layout_constraintTop_toTopOf="@+id/buttonFive" />

    <Button
        android:id="@+id/buttonEight"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Eight"
        android:text="8"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelPurple"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonSeven"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonThird"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Three"
        android:text="3"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelYellow"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonSecond"
        app:layout_constraintTop_toBottomOf="@+id/buttonFive" />

    <Button
        android:id="@+id/buttonSecond"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Two"
        android:text="2"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelOrange"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/ButtonFirst"
        app:layout_constraintTop_toBottomOf="@+id/buttonFive" />

    <Button
        android:id="@+id/buttonErase"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="ClearOne"
        android:text="โซ"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelGreen"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        app:layout_constraintTop_toTopOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Multiply"
        android:text="x"
        android:backgroundTint="@color/pastelYellow"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDivide"
        app:layout_constraintTop_toTopOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonThird4"
        android:layout_width="116dp"
        android:layout_height="228dp"
        android:onClick="Equal"
        android:text="="
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelGreen"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/buttonThird"
        app:layout_constraintTop_toBottomOf="@+id/buttonSix" />

    <Button
        android:id="@+id/buttonSum"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Sum"
        android:text="+"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelPurple"
        android:textSize="48sp"
        app:strokeColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/buttonSix"
        app:layout_constraintTop_toBottomOf="@+id/buttonNine" />

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Seven"
        android:text="7"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelBlue"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buttonClear"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <Button
        android:id="@+id/ButtonFirst"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="One"
        android:text="1"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelRed"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buttonFour"
        app:layout_constraintTop_toBottomOf="@+id/buttonFour" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Divide"
        android:text="รท"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelOrange"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toTopOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Zero"
        android:text="0"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelPurple"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonPercentage"
        app:layout_constraintTop_toBottomOf="@+id/ButtonFirst" />

    <Button
        android:id="@+id/buttonPercentage"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Percentage"
        android:text="%"
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelBlue"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="@+id/ButtonFirst"
        app:layout_constraintTop_toBottomOf="@+id/ButtonFirst" />

    <Button
        android:id="@+id/buttonSecond7"
        android:layout_width="116dp"
        android:layout_height="114dp"
        android:onClick="Comma"
        android:text=","
        android:textColor="@color/black"
        android:backgroundTint="@color/pastelRed"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/buttonZero"
        app:layout_constraintTop_toBottomOf="@+id/buttonSecond" />

</androidx.constraintlayout.widget.ConstraintLayout>